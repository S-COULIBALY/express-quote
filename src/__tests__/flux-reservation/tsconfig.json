{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../src/*"],
      "@/components/*": ["../../src/components/*"],
      "@/hooks/*": ["../../src/hooks/*"],
      "@/lib/*": ["../../src/lib/*"],
      "@/app/*": ["../../src/app/*"]
    },
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "node"
    ],
    "typeRoots": [
      "./types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../../src/**/*.ts",
    "../../src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}

{
  "name": "tests-flux-reservation",
  "version": "1.0.0",
  "description": "Tests complets pour le flux de r√©servation ExpressQuote",
  "scripts": {
    "test:unit": "jest tests/unitaires --config=jest.config.js",
    "test:integration": "playwright test tests/integration --config=playwright.config.js",
    "test:e2e": "playwright test tests/e2e --config=playwright.config.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "jest --coverage --config=jest.config.js",
    "test:performance": "playwright test tests/performance --config=playwright.config.js",
    "test:notifications": "jest tests/notifications --config=jest.config.js",
    "test:paiements": "playwright test tests/paiement --config=playwright.config.js",
    "test:watch": "jest --watch --config=jest.config.js",
    "test:debug": "playwright test --debug --config=playwright.config.js",
    "test:ui": "playwright test --ui --config=playwright.config.js",
    "test:report": "playwright show-report",
    "test:clean": "rimraf test-results playwright-report coverage",
    "test:setup": "node setup/test-setup.js",
    "test:teardown": "node setup/test-teardown.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/setup/jest.setup.ts"],
    "testMatch": [
      "**/unitaires/**/*.test.ts",
      "**/unitaires/**/*.test.tsx"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{ts,tsx}",
      "!src/**/*.test.{ts,tsx}",
      "!src/**/*.spec.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "playwright": {
    "testDir": "./e2e",
    "outputDir": "./test-results",
    "timeout": 30000,
    "expect": {
      "timeout": 10000
    },
    "retries": 2,
    "reporter": [
      ["html", { "outputFolder": "./playwright-report" }],
      ["json", { "outputFile": "./test-results/results.json" }],
      ["junit", { "outputFile": "./test-results/results.xml" }],
      ["list"]
    ],
    "use": {
      "baseURL": "http://localhost:3000",
      "trace": "on-first-retry",
      "screenshot": "only-on-failure",
      "video": "retain-on-failure"
    },
    "projects": [
      {
        "name": "chromium",
        "use": { "browserName": "chromium" }
      },
      {
        "name": "firefox",
        "use": { "browserName": "firefox" }
      },
      {
        "name": "webkit",
        "use": { "browserName": "webkit" }
      }
    ]
  }
}

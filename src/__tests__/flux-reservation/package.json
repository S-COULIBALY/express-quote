{
  "name": "express-quote-tests",
  "version": "1.0.0",
  "description": "Tests pour le flux de r√©servation Express Quote",
  "scripts": {
    "test:unit": "jest --config jest.config.js --testPathPattern=unitaire",
    "test:integration": "playwright test --config=playwright.config.js --grep='integration'",
    "test:e2e": "playwright test --config=playwright.config.js --grep='e2e'",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:watch": "jest --config jest.config.js --watch",
    "test:debug": "jest --config jest.config.js --detectOpenHandles --forceExit",
    "test:ci": "jest --config jest.config.js --ci --coverage --watchAll=false",
    "playwright:install": "playwright install",
    "playwright:test": "playwright test --config=playwright.config.js",
    "playwright:test:headed": "playwright test --config=playwright.config.js --headed",
    "playwright:test:debug": "playwright test --config=playwright.config.js --debug",
    "playwright:test:ui": "playwright test --config=playwright.config.js --ui",
    "playwright:test:report": "playwright show-report",
    "lint:test": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:test:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit --project tsconfig.json"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
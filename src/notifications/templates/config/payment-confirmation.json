{
  "id": "payment-confirmation-email",
  "name": "Confirmation de paiement par email",
  "type": "EMAIL_HTML",
  "category": "TRANSACTIONAL",
  "description": "Email de confirmation de paiement",
  "isActive": true,
  "defaultLanguage": "fr",
  "variables": [
    {
      "name": "customerName",
      "type": "string",
      "description": "Nom du client",
      "required": true,
      "example": "Jean Dupont"
    },
    {
      "name": "paymentReference",
      "type": "string",
      "description": "Référence de paiement",
      "required": true,
      "example": "PAY-123456"
    },
    {
      "name": "paymentAmount",
      "type": "number",
      "description": "Montant du paiement",
      "required": true,
      "example": 850
    },
    {
      "name": "paymentMethod",
      "type": "string",
      "description": "Méthode de paiement",
      "required": true,
      "example": "Carte bancaire"
    },
    {
      "name": "bookingReference",
      "type": "string",
      "description": "Référence de réservation",
      "required": true,
      "example": "BK-123456"
    }
  ],
  "content": {
    "fr": {
      "version": "1.0.0",
      "subject": "Confirmation de paiement - {{paymentReference}}",
      "body": "<h1>Confirmation de paiement</h1>\n<p>Bonjour {{customerName}},</p>\n<p>Votre paiement {{paymentReference}} a été confirmé.</p>\n<p>Montant: {{paymentAmount}}€</p>\n<p>Méthode: {{paymentMethod}}</p>\n<p>Réservation: {{bookingReference}}</p>\n<p>L'équipe Express Quote</p>"
    }
  },
  "tags": ["payment", "confirmation", "email"],
  "metrics": {
    "totalUsage": 0,
    "deliveryRate": 0,
    "avgCompilationTime": 0,
    "renderErrorRate": 0,
    "performanceScore": 100,
    "lastUpdated": "2025-01-01T00:00:00.000Z"
  }
}


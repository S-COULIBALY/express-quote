{
  "id": "booking-confirmation-email",
  "name": "Confirmation de réservation par email",
  "type": "EMAIL_HTML",
  "category": "TRANSACTIONAL",
  "description": "Email de confirmation de réservation",
  "isActive": true,
  "defaultLanguage": "fr",
  "variables": [
    {
      "name": "customerName",
      "type": "string",
      "description": "Nom du client",
      "required": true,
      "example": "Jean Dupont"
    },
    {
      "name": "bookingReference",
      "type": "string",
      "description": "Référence de réservation",
      "required": true,
      "example": "BK-123456"
    },
    {
      "name": "serviceName",
      "type": "string",
      "description": "Nom du service",
      "required": true,
      "example": "Déménagement complet"
    },
    {
      "name": "serviceDate",
      "type": "string",
      "description": "Date du service",
      "required": true,
      "example": "15/09/2025"
    },
    {
      "name": "serviceTime",
      "type": "string",
      "description": "Heure du service",
      "required": true,
      "example": "14:00"
    },
    {
      "name": "totalAmount",
      "type": "number",
      "description": "Montant total",
      "required": true,
      "example": 850
    }
  ],
  "content": {
    "fr": {
      "version": "1.0.0",
      "subject": "Confirmation de votre réservation - {{bookingReference}}",
      "body": "<h1>Confirmation de réservation</h1>\n<p>Bonjour {{customerName}},</p>\n<p>Votre réservation {{bookingReference}} est confirmée.</p>\n<p>Service: {{serviceName}}</p>\n<p>Date: {{serviceDate}} à {{serviceTime}}</p>\n<p>Montant: {{totalAmount}}€</p>\n<p>L'équipe Express Quote</p>"
    }
  },
  "tags": ["booking", "confirmation", "email"],
  "metrics": {
    "totalUsage": 0,
    "deliveryRate": 0,
    "avgCompilationTime": 0,
    "renderErrorRate": 0,
    "performanceScore": 100,
    "lastUpdated": "2025-01-01T00:00:00.000Z"
  }
}


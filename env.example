# Variables d'environnement pour Express Quote
# Copiez ce fichier vers .env.local et remplissez avec vos vraies valeurs

# Configuration de base
NODE_ENV=development
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Stripe Configuration
# Obtenez vos clés sur https://dashboard.stripe.com/test/apikeys
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_votre_cle_publique_stripe
STRIPE_SECRET_KEY=sk_test_votre_cle_secrete_stripe
STRIPE_WEBHOOK_SECRET=whsec_votre_secret_webhook_stripe

# Configuration Email (optionnel)
EMAIL_FROM=contact@votre-domaine.com
EMAIL_SERVER_HOST=smtp.votre-provider.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=votre-email@votre-domaine.com
EMAIL_SERVER_PASSWORD=votre-mot-de-passe-email

# Base de données
DATABASE_URL="file:./dev.db"

# API Keys externes (optionnel)
GOOGLE_MAPS_API_KEY=votre_cle_google_maps
TOOLGURU_API_KEY=votre_cle_toolguru

# Configuration WhatsApp Business API (optionnel)
# Obtenez vos credentials sur https://developers.facebook.com/apps/
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_API_VERSION=v18.0

# Variables de debug (optionnel)
DEBUG=false
LOG_LEVEL=info 